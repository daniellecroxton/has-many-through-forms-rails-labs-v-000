<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>

<h3>Comments:</h3>
<p><ul>
<% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul></p>

<h3>Users who have commented:</h3>
<p><ul><% @post.users.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %></ul>
</p>

<%= form_for [:comment, :content, @post] do |f| %>
  <%= f.label "Comment" %>
  <%= f.text_area :comment_content %>
  <%= f.collection_check_boxes :user_ids, User.all, :id, :username, :include_blank %>
  <%= f.submit %>
<% end %>
