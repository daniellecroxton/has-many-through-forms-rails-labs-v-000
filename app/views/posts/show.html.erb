<h1><%= @post.title %></h1>
<p>
  <%= @post.content %>
</p>

<h3>Comments:</h3>
<p><ul>
<% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul></p>

<h3>Users who have commented:</h3>
<p><ul><% @post.users.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %></ul>
</p>

<h3>New comment:</h3>
<%= form_for @post do |f| %>
  <%= f.fields_for :comment do |comment_content| %>
  <%= comment_content.label "Comment" %>
  <%= comment_content.text_area :comment_content %>
  <%= comment_content.collection_check_boxes :user_ids, User.all, :id, :username, include_blank: true %>
  <% end %>
  <%= f.submit %>
<% end %>
